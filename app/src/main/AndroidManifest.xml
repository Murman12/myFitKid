<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lalel.myfitkid">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logosmall"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".Walk"
            android:parentActivityName="com.example.lalel.myfitkid.HomeActivity"
            android:label="Walk"
            android:logo="@drawable/muscle"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.lalel.myfitkid.Walk" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Achievement"
            android:parentActivityName="com.example.lalel.myfitkid.HomeActivity"
            android:label="Account">
            <intent-filter>
                <action android:name="com.example.lalel.myfitkid.Achievement" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".ExerciseInfo"
            android:parentActivityName="com.example.lalel.myfitkid.HomeActivity"
            android:label="Exercise">
            <intent-filter>
                <action android:name="com.example.lalel.myfitkid.ExerciseInfo" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Feedback"
            android:parentActivityName="com.example.lalel.myfitkid.HomeActivity"
            android:label="Questionnaire">
            <intent-filter>
                <action android:name="com.example.lalel.myfitkid.Feedback" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
